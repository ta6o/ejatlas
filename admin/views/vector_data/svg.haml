%br/
%h2
  %b SVG Icons
%p.lead A reference site to include SVG icons in vector maps.
.row
  .col-sm-6
    -@svgs.each do |kkk,vvv|
      %ul.collapsible.expandable
        -if kkk == "_files"
          %li.active
            %ul
              -vvv.each do |file|
                %li.file{"data-path"=>"/"}
                  =file
        -else
          %li
            .collapsible-header=kkk
            .collapsible-body
              %ul.collapsible.expandable
                -vvv.each do |kk,vv|
                  -if kk == "_files"
                    %li.active
                      %ul
                        -vv.each do |file|
                          %li.file{"data-path"=>"/#{kkk}/"}
                            =file
                  -else
                    %li
                      .collapsible-header=kk
                      .collapsible-body
                        %ul.collapsible.expandable
                          -vv.each do |k,v|
                            -if k == "_files"
                              %li.active
                                %ul
                                  -v.each do |file|
                                    %li.file{"data-path"=>"/#{kkk}/#{kk}/"}
                                      =file
                            -else
                              %li
                                .collapsible-header=k
                                .collapsible-body
                                  %ul.collapsible.expandable
                                    -v.each do |_k,_v|
                                      -if _k == "_files"
                                        %li.active
                                          .collapsible-body
                                            %ul
                                              -_v.each do |file|
                                                %li.file{"data-path"=>"/#{kkk}/#{kk}/#{k}/"}
                                                  =file
  .col-sm-6
    %p.showtext
    %p.copied Copied!
    %br/
    .showcase

-content_for :include do
  =stylesheet_link_tag 'materialize'
  :css
    .showcase {
      width: calc( 100vw / 2 - 100px );
      height:  calc( 100vw / 2 - 100px );
      background-color: transparent;
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;
    }
    .showtext {
      cursor:pointer;
      font-weight: normal;
      width: 100%;
      height: 24px;
      background-color: transparent;
      background-size: contain;
      background-position: left center;
      background-repeat: no-repeat;
      padding-left: 48px;
      font-size: 16px;
    }
    .copied {
      font-weight: bold;
      width: 100%;
      height: 24px;
      padding-left: 48px;
      opacity: 0;
    }
    li.file {
      cursor: pointer;
    }


-content_for :body_end do
  =javascript_include_tag 'materialize'
  :javascript
     $(document).ready(function(){
       $('.collapsible').collapsible();
       $("li.file").on("click",function(){
         filename = "https://file.ejatlas.org/svg"+$(this).data("path")+$(this).text().trim()
         $(".showtext").text(filename);
         $(".showcase, .showtext").css("background-image", "url('"+filename+"')")
         $(".copied").css("opacity",0)
       })
       $(".showtext").on("click",function(){
          if (window.getSelection) {
            var sel = window.getSelection();
            sel.removeAllRanges();
            var range = document.createRange();
            range.selectNodeContents(this);
            sel.addRange(range);
          } else if (document.selection) {
            var textRange = document.body.createTextRange();
            textRange.moveToElementText(this);
            textRange.select();
          }
          document.execCommand("copy");
          $(".copied").css("opacity",1)
          $(".copied").delay(500).animate({opacity:0},500)
       })
     });

