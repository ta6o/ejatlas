-# coding: utf-8
%html{:lang => I18n.locale.to_s, :dir=>I18n.locale.to_s == "ar" ? "rtl" : "ltr"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    :css
      a { color: #049cdb; text-decoration:none; }
      a:hover { text-decoration:underline; }
    -if I18n.locale.to_s == "ar"
      :css
        p { 
          direction: rtl; 
          text-align: right;
        }
  %body{:style=>'background:#fff'}
    %div{:style => "width: 100%; max-width: 600px; font-family: Helvetica, Arial, sans-serif; font-size: 14px; text-align:left; line-height:150%;padding: 48px;"}
      %p
        = I18n.t("emails.general.dear_var", account_name: @account.name)
        %br/
        %br/
        =I18n.t("emails.conflict_collaborator_invite.var_has_invited_you", suggesting_account: @suggesting_account.name, conflict: "<b>#{@conflict.name}</b>")
        %br/
        %br/
        =I18n.t("emails.conflict_collaborator_invite.please_click_link_below_to")
        %br/
        %br/
        %a{:href=>"#{Admin.local_url(@ct.locale)}/conflicts/edit/#{@conflict.id}",:target=>'_blank'}= "#{Admin.local_url(@ct.locale)}/conflicts/edit/#{@conflict.id}"
        %br/
        %br/
        = I18n.t("emails.general.best_wishes")
        %br/
        %br/
        = I18n.t("emails.general.ejatlas_editors")
