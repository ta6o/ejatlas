-# coding: utf-8
-content_for :include do
  =stylesheet_link_tag 'tablesorter/style'
  =javascript_include_tag 'jquery.tablesorter.min', 'uitablefilter'
.row.wide
  .col-md-12
    .hero-unit
      %h1.title
        =mt('User Profiles')
    .inner
      %table.table.tablesorter#sortme
        %thead
          %tr
            %th.first=mat(:account, :image)
            %th=mat(:account, :name)
            %th=mat(:account, "Int & Com")
            %th=mat(:account, :role)
            %th=mat(:account, :email)
            %th.last
              %form#filter-form
                %input#filter{:name=>"filter",:value=>"",:maxlength=>"30",:size=>"30",:type=>"text",:placeholder=>'Filter'}/
        %tbody
          -@accounts.each do |account|
            %tr
              %td.first
                -if img = account.images.where(prime:1)[0]
                  %img{:src=>img.file.thumb_url,:style=>'width:64px;'}
                -else
                  &nbsp;
              %td=account.name
              %td
                -if account.intention and account.intention.length > 0
                  %span.glyphicon.glyphicon-ok
                  %span.hide 0
                -else
                  %span.glyphicon.glyphicon-remove
                  %span.hide 1
                &nbsp;
                -if account.comments and account.comments.length > 0
                  %span.glyphicon.glyphicon-ok
                  %span.hide 0
                -else
                  %span.glyphicon.glyphicon-remove
                  %span.hide 1
              %td=account.role
              %td=account.email
              %td.last
                =link_to pat(:edit), url(:accounts, :edit, :id => account.id), :method => :get, :class => 'button_to pull-right'
                %br/
                =link_to pat(:delete), url(:accounts, :destroy, :id => account.id), :method => :delete, :class => 'button_to pull-right', :onsubmit => "return confirm('#{pat(:confirm)}')"

      :javascript
        $(document).ready(function(){
          $('#sortme').tablesorter({
            headers: { 
              3: { sorter: false } 
            } 
          });
          var theTable = $('table#sortme')
          $("#filter").click(function(){$('#filter').focus();});
          $("#filter").keyup(function() {
            $.uiTableFilter( theTable, this.value );
          })
          $('#filter-form').submit(function(){
            return false;
          }).focus(); 
        });
