-# coding: utf-8
.row.wide
  .col-md-12
    .hero-unit
      %h1.title
        =mt('Companies to merge')
    .inner
      -@keywords.each do |k,v|
        -next unless v.any?
        .well
          %h3= k
          %form
            %ul
            -v.each do |s|
              %li.clearfix{:style=>'list-style-type:none'}
                .pull-left
                  &nbsp;
                  %input{:type=>'radio',:name=>k}
                  &nbsp;
                .pull-left
                  &nbsp;
                  %input{:type=>'checkbox'}
                  &nbsp;
                .pull-left
                  -if s[:name].length > 48
                    %span{:title=>s[:name]}=s[:name][0..48]+"..."
                  -else
                    %span=s[:name]
                  &nbsp;
                  %span.badge{:title=>s[:confs]}=s[:count]

