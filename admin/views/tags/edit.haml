-# coding: utf-8
-content_for :include do
  =stylesheet_link_tag 'dist/neutrino/jquery-ui'
  -#=javascript_include_tag 'dist/jquery.validate', 'dist/jquery-ui.min', 'dist/maskedinput', 'dist/modal'
.row
  .col-md-12
    .hero-unit
      %h1.title
        Editing Tag: 
        = @tag.name
        %small
          %a{:href=>'/tags'} all tags
    .inner
      =form_for :tag, url(:tags, :update, :id => @tag.id), :method => :put, :class => :form do |f|
        =partial "tags/form", :locals => { :f => f }

