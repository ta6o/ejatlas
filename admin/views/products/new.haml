.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:products, :index)
      %li.active=link_to pat(:new), url(:products, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:product)
    .inner
      =form_for :product, url(:products, :create), :class => :form do |f|
        =partial "products/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
