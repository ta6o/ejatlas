-# coding: utf-8
!!!
%html{:lang => "en"}
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic&subset=latin,latin-ext", :rel=>'stylesheet', :type=>'text/css'}/
    %meta{:charset => "utf-8"}/
    %title= @name ? @name + ' | ' + "EJAtlas" : "EJAtlas"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => 'text/html;charset=UTF-8', 'http-equiv' => "content-type"}/
    %meta{:content => $title, :property => "og:title"}/
    %meta{:content => $pagedesc, :property => "og:description"}/
    %meta{:content => $siteurl, :property => "og:url"}/
    %meta{:content => $siteurl + '/images/direncevre_og.jpg', :property => "og:image"}/
    %meta{:content => $pagedesc, :name => "description"}/
    %meta{:content => $pageauthor, :name => "author"}/
    %meta{:content => $pagekeyws, :name => "keywords"}/
    %link{:href => "/stylesheets/bootstrap.less", :rel => "stylesheet/less"}/
    =javascript_include_tag 'less'
    /=stylesheet_link_tag 'app'
    =javascript_include_tag 'jquery', 'collapse', 'tab', 'transition', "affix", "dropdown"
    =yield_content :include

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    %link{:href => "/images/favicon.ico", :rel => "shortcut icon"}/
    / %link{:href => "assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    / %link{:href => "assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    / %link{:href => "assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/

  %body{"data-offset" => "0", "data-spy" => "scroll", "data-target" => ".subnav"}
    #top.contentwrapper
      .navbar.navbar-fixed-top{:role=>'navigation'}
        .navbar-inner
          .container
            .row
              .col-md-12
                %a.btn.btn-navbar.pull-left{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                .navbar-collapse.collapse
                  %ul.nav.nav-pills
                    %li
                      %a{:href => "/"}= "Home"
                    %li.dropdown#ejolt
                      %a.dropdown-toggle{'data-toggle'=>'dropdown',:href=>'#ejolt'}
                        = 'EJ Atlas'
                        %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href=>'/about'} About
                        %li
                          %a{:href=>'/faq'} FAQ
                        %li
                          %a{:href=>'/disclaimer'} Disclaimer
                        %li
                          %a{:href=>'/credits'} Credits &amp; Collaborators
                        %li
                          %a{:href=>'/contact'} Contact
                    %li
                      %a{:href => "http://ejolt.org/"}= "EJOLT"
                    %li.dropdown#maps
                      %a.dropdown-toggle{'data-toggle'=>'dropdown',:href=>'#maps'}
                        = 'Maps'
                        %b.caret
                      %ul.dropdown-menu
                        %li
                          %a.disable{:href=>'#'} Featured Maps
                        %li
                          %a{:href=>'/country'} Country Maps
                        %li
                          %a{:href=>'/company'} Company Maps
                        %li
                          %a{:href=>'/commodity'} Commodity Maps
                    -if current_account.nil?
                      %li.dropdown#login
                        %a.dropdown-toggle{'data-toggle'=>'dropdown',:href=>'#login',:onclick=>"$('.tagline').css('z-index',1000)"}
                          = 'Login'
                          %b.right-caret
                        %ul.dropdown-menu.dropdown-right
                          =form_tag(url(:sessions, :create), :class => 'form login', :style=>'margin:0') do
                            .clearfix
                              .pull-left
                                &nbsp; Email:
                              .pull-left=text_field_tag :email, :value => params[:email]
                              .pull-left
                                Password: 
                              .pull-left=password_field_tag :password, :value => params[:password]
                              .pull-left=submit_tag('Enter', :class => :btn)
                              .pull-left.small
                                %a{:href=>'/sessions/login'} Help!

                    -else
                      %li.dropdown#profile
                        %a.dropdown-toggle{'data-toggle'=>'dropdown',:href=>'#profile'}
                          = "#{current_account.name.split(/\s+/)[0]}"
                          %b.caret
                        %ul.dropdown-menu
                          %li
                            %a{:href=>"/accounts/edit/#{current_account.id}"} My Profile
                          %li
                            -if ['admin','editor'].include? current_account.role
                              %a{:href=>'/conflicts'} Conflicts
                            -else
                              %a{:href=>'/conflicts'} My Cases
                          %li
                            %a{:href=>'/conflicts/new'} New Conflict
                          %li
                            %form#signout.hide{:action=>'/sessions/destroy',:method=>'post'}
                              %input{:value=>'delete',:name=>'_method',:type=>'hidden'}
                            %a{:href=>'#',:onclick=>'$("#signout").submit()'} Logout

      %header
        .container{:style=>'margin-top:72px;'}
          .row
            .col-md-3.relative
              .logo{:style=>'margin-top:14px;height:140px'}
            .col-md-9.relative
              .inner{:style=>'color:#024357'}
                -if @name == "Page not found"
                  %h1{:style=>'font-size:72px;font-weight:bold'} 404 - Lost in atlas!
                  %h2 The page you requested could not be found.

                -elsif @name == "Error"
                  %h1{:style=>'font-size:72px;font-weight:bold'} 500 - Technical problem
                  %h2 An error occured in our servers, sorry for the inconvenience. The incidence is reported.
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-49025282-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
