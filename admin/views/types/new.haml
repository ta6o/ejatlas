.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:types, :index)
      %li.active=link_to pat(:new), url(:types, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:type)
    .inner
      =form_for :type, url(:types, :create), :class => :form do |f|
        =partial "types/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
